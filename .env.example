# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Provider Configuration
DEFAULT_LLM_PROVIDER=openai  # Options: openai, anthropic
DEFAULT_PLAN_MODEL=gpt-4o    # For OpenAI: gpt-4o, gpt-3.5-turbo; For Anthropic: claude-3-sonnet, claude-3-opus
DEFAULT_STEP_MODEL=gpt-4o-mini    # Model used for step execution

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3307  # Custom port for Docker, default MySQL port is 3306
DB_USER=times1000
DB_PASSWORD=times1000_password
DB_NAME=times1000

# For Docker Compose, use DB_HOST=mysql

# Security (generate a strong random string)
JWT_SECRET=your_jwt_secret_here